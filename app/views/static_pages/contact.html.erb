<!-- begin page id -->
<div id="contact-us-page"> 
	<!-- begin outer container -->  
	<div id="outer-container"> 
		<!-- begin inner container -->
		<div id="inner-container"> 
			<div id="header">
				<%= render 'layouts/header' %>			
			</div>
			<%= render 'layouts/navigation' %>
					
			<div id="content"> 	
				
				<div class="single-column">
					<h1>Contact Us</h1>

					<div class="contact-us-form">

            <%= render :partial => 'shared/display_flash' %>

						<%= form_tag contact_path, :method => :post, :honeypot => true do %>

							<%= label_tag :name, "Name:" %>
							<%= text_field_tag :name, params[:name],:class => "input-text" %>

							<%= label_tag :affiliation, "Affiliation:"%>
							<%= text_field_tag :affiliation, params[:affiliation], :class => "input-text" %>

							<%= label_tag :email, "Email:"%>
							<%= text_field_tag :email, params[:email],:class => "input-text" %>

							<%= label_tag :message, "Message:"%>
					
							<%= text_area_tag :message, params[:message] %>

							<%= hidden_field_tag :campus, @campus %>

							<div class="honeypot">
								<%#= label_tag :sweet_honey, "This is a honeypot, if you see this your CSS is turned off or you're a bot. If you're not a bot don't fill it in." %>
      					<%= text_field_tag :content, nil, tabindex: '-1' %>
      					<span class="help">Do not fill in this field. It is an anti-spam measure.</span>
    					</div>

							<div class="button-container">
  							
  							<%= submit_tag "Submit" , :class => "btn"%>
  							<%= image_submit_tag "reset-button.png", type: :reset, :class => "btn", id: "cancel_action" %>
  							
  						</div>

						<% end %>
						
					</div>
				</div>
			</div>
			<!-- begin footer-->
			<%= render "layouts/brand/footer_#{campus(@user)}" %>
			<!-- end footer-->
		</div> <!-- end inner container -->
	</div> <!-- end outer container -->
</div> <!-- end page -->
